<% include ./partials/head %>
<% include ./partials/nav %>

<section class="container">
   
    <h1 class="small"><%= title %></h1>
    <div class="row">
        <div class="col s12">
            <form action="/songs" method="post">
                <input name="title" placeholder="Enter song title"/>
                <input name="artist" placeholder="Enter song artist"/>
                <input name="description" placeholder="Enter song description"/>
                <button class="btn waves-effect">Add Song</button>
            </form>
        </div>
    </div>
    <div class="row">
        <% songs.forEach(function(song) { %>

            <div class="col s12 m4">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                    <span class="card-title"><%= song.title %></span><br/>
                    <p><%= song.artist %></p>
                    <p><%= song.description.substring(0, 50) %>...</p>
                    </div>
                    <div class="card-action">
                        <a href="/songs/<%= song.id %>">Check it out!</a>
                    </div>
                </div>
            </div>

        <% }); %>
    </div>
</section>

<% include ./partials/foot %>