<% include ./partials/head %>
<% include ./partials/nav %>
 <nav class="black">
    <div class="nav-wrapper">
      <div class="col s12">
        <a href="/songs" class="breadcrumb">Songs</a>
        <a href="/songs/<%= song.id %>" class="breadcrumb"><%= song.title %></a>
      </div>
    </div>
  </nav>

<% var url = '/songs/' + song.id %>
<section class="container">
   
    <h1 class="small"><%= song.title %></h1>
    <p class="grey-text"><%= song.artist %></p>
    <div class="row">
        <div class="col s12">
            <p>
                <%= song.description %>
            </p>
        </div>
    </div>
    <br/>
    <div class="row grey lighten-2">
        <div class="col s12">
            <br/>
            <b class="red-text">Edit the song</b>            
            <form action="<%= url %>?_method=PUT" method="POST">
                <input name="title" value="<%= song.title %>" />
                <input name="artist" value="<%= song.artist %>" />
                <input name="description" value="<%= song.description %>" />
                <button class="btn">Submit</button>
            </form>
            <br/>
            <form action="<%= url %>?_method=DELETE" method="POST">
                <button class="btn red">Delete</button>
            </form>
            <br/>
        </div>
    </div>
</section>

<% include ./partials/foot %>